{
  "name": "nuxt-ssr-lit",
  "version": "1.0.0",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/module.mjs",
      "require": "./dist/module.cjs"
    }
  },
  "main": "./dist/module.cjs",
  "types": "./dist/types.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": [
    "@lit-labs/ssr/lib/install-global-dom-shim.js",
    "@lit-labs/ssr/lib/render-lit-html.js"
  ],
  "scripts": {
    "build": "npm run clean && npm run prepack && npm run dev:build",
    "clean": "rimraf dist",
    "prepack": "nuxt-module-build",
    "dev": "npm run dev:nuxt3",
    "dev:nuxt2": "npm --prefix playground-nuxt2 run dev",
    "dev:nuxt3": "npm --prefix playground-nuxt3 run dev",
    "dev:build": "npm run dev:build:nuxt3 && npm run dev:build:nuxt2",
    "dev:build:nuxt2": "npm --prefix playground-nuxt2 run build",
    "dev:build:nuxt3": "npm --prefix playground-nuxt3 run build",
    "dev:prepare": "nuxt-module-build --stub && npm run dev:prepare:nuxt2 && npm run dev:prepare:nuxt3",
    "dev:prepare:nuxt2": "npm --prefix playground-nuxt2 run prepare",
    "dev:prepare:nuxt3": "npm --prefix playground-nuxt3 run prepare",
    "lint": "eslint \"src/**/*.*\"  --fix",
    "test": "vitest run tests",
    "test:nuxt2": "npm --prefix playground-nuxt2 run test",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@lit-labs/ssr": "^2.2.3",
    "@nuxt/kit": "^3.0.0-rc.12",
    "@vue/server-renderer": "^3.2.41",
    "@webcomponents/template-shadowroot": "^0.1.0",
    "magic-string": "^0.26.7",
    "node-fetch": "^2.6.7",
    "vue-server-renderer": "^2.7.13"
  },
  "devDependencies": {
    "@nuxt/module-builder": "^0.1.7",
    "@nuxt/schema": "^3.0.0-rc.11",
    "@nuxt/test-utils": "npm:@nuxt/test-utils-edge@^3.0.0-rc.13-27778352.91eab1b",
    "@nuxt/test-utils-edge": "^3.0.0-rc.13-27778165.452766e",
    "@nuxt2/test-utils": "npm:@nuxt/test-utils@^0.2.2",
    "@nuxtjs/eslint-config-typescript": "^11.0.0",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.6.0",
    "nuxi": "^3.0.0-rc.12",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "unplugin": "^0.10.2",
    "vitest": "^0.24.1"
  }
}